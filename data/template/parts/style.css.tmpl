{{ define "style.css" }}
    <style type="text/css">
      .clear {
        clear: both;
        height: 15px;
        overflow: hidden;
      }
      .activePanel {
        .stash {
            margin-top: 15px;
        }
      }
      .customContainerPanel {
        width: 600px;
        float: left;
      }
      .activePanel {
        padding-top: 0px;
        width: 600px;
        float: left;
      }
      .tabWindow {
          position: relative;
          top: 140px;
      }
      .stashTabContainer .tabsOverflow {
          height: inherit;
          bottom: 0px;
          left: 50px;
      }
      .stashPanel .stashTabContents {
          margin-top: 145px;
          margin-left: 15px;
          width: 575px;
          height: 575px;
      }
      .tippy-backdrop {
        background-color: transparent;
      }
      .tippy-tooltip[data-size="large"] {
        padding: .375rem .75rem;
        font-size: 1.3rem;
      }
      .tippy-popper {
        max-width: inherit;
      }
      .tippy-tooltip {
        max-width: inherit !important;
      }
      .newItemContainer {
        background-color: none;
      }
      .inventoryManagerMenu {
        min-height: inherit;
      }
      .inventoryManagerMenu .characters {
        overflow: hidden;
      }
      .inventoryManager {
        width: 600px;
      }
      .characters {
        width: 600px;
        height: inherit !important;
      }
      .accounts li {
        display: table;
        background: url('https://www.pathofexile.com/image/gen/inventory-sprite.png?1562824100090') no-repeat;
        background-position: -80px -109px;
        height: 31px;
        width: 200px;
        padding-left: 15px;
        padding-top: 6px;
      }
      .accounts li a {
        font-family: "FontinSmallCaps",Verdana,Arial,Helvetica,sans-serif;
        text-decoration: none;
        display: table-cell;
        width: 100%;
      }
      .accounts li a:hover {
        color: #eCcBa9;
      }
      .refresh {
        background: url('https://www.pathofexile.com/image/gen/trade.png?1563952712425') no-repeat;
        background-size: 286px 253px;
        background-position: -255px -124px;
        width: 30px;
        height: 30px;
        position: absolute;
        border: 0;
        top: -4px;
        position: relative;
        right: 2px;
      }
      .refresh:hover {
        -webkit-animation-name: rotate;
        -webkit-animation-duration:500ms;
        -webkit-animation-iteration-count:1;
        -webkit-animation-timing-function:linear;
        -webkit-animation-fill-mode: forwards;
        -moz-animation-name: rotate;
        -moz-animation-duration:500ms;
        -moz-animation-iteration-count:1;
        -moz-animation-timing-function:linear;
        -moz-animation-fill-mode: forwards;
      }
      @-webkit-keyframes rotate {
        from {-webkit-transform:rotate(0deg);}
        to {  -webkit-transform:rotate(90deg);}
      }
      @-moz-keyframes rotate {
        from {-moz-transform:rotate(0deg);}
        to {  -moz-transform:rotate(90deg);}
      }
      #header {
        color: #F7CC8E;
        height: 100px;
        padding-top: 10px;
        margin: auto;
        text-align: center;
        font-size: 60px;
        font-family: "FontinSmallCaps",Verdana,Arial,Helvetica,sans-serif;
        -webkit-text-stroke: 1px #5a3806;
        text-shadow:
        3px 3px 0 #886437,
        -1px -1px 0 #886437,
        1px -1px 0 #886437,
        -1px 1px 0 #886437,
        1px 1px 0 #886437;
      }
      #header a {
        color: inherit;
        text-decoration: none;
      }
      #main-page {
        border: 1px solid black;
        margin: 0 auto;
        width: 50%;
        max-width: 924px;
        padding-left: 35px;
        padding-right: 35px;
        padding-bottom: 35px;
        padding-top: 10px;
        background: #191A17 url('https://www.pathofexile.com/image/profile/profile-full.jpg?1563488658105') no-repeat top left;
      }
      #main-page h1 {
        margin-top: 20px;
        margin-bottom: 20px;
      }
      .error {
        color: #8c2b34;
        background-color: #191A17;
        border: 1px solid #A38D6D;
        padding: 10px;
        border-radius: 4px;
      }
      #modal {
        display: block;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 9999;
        width: 100%;
        height: 100%;
        padding-top: 100px;
        -webkit-transition: 0.5s;
        overflow: auto;
        transition: all 0.3s linear;
        font-family: "FontinRegular";
        background: rgba(0, 0, 0, 0.7);
      }
      .hidden {
        display: none;
      }
      .modal-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) !important;
        padding: 20px;
        border-radius: 4px;
        width: 400px;
        background: #191A17 url('https://www.pathofexile.com/image/profile/profile-full.jpg?1563488658105') no-repeat top left;
        border: 1px solid;
      }
      .close {
        background-position: 0 0;
        height: 25px;
        width: 25px;
        background-image: url('https://www.pathofexile.com/image/UI/button/close-normal.png?1563488599694');
        border: 0px none;
        position: absolute;
        top: 10px;
        right: 10px;
      }
      .close:hover, .close:focus {
        text-decoration: none;
        cursor: pointer;
        background-image: url('https://www.pathofexile.com/image/UI/button/close-hover.png?1563488599694');
      }
      .desactivate {
        overflow: hidden;
      }
      .button {
        color: #e9cf9f;
        border: 1px solid #886437;
        background-color: #5a3806;
        cursor: pointer;
      }
      .button:hover {
        background-color: #774c0d;
      }
      .input-text {
        border: 1px solid #a0a0d0;
        background: #1e2124;
        color: #e2e2e2;
        padding: 1px 4px;
        min-height: 20px;
        line-height: 20px;
      }
      .dropdown {
        color: #e2e2e2;
        background: #1e2124;
        border: 1px solid #a0a0d0;
        padding: 1px 4px;
        min-height: 20px;
        line-height: 20px;
      }
      .button-submit {
        min-height: 20px;
        line-height: 20px;
      }
      #confirm {
        display: block;
        position: fixed;
        top: 25px;
        right: 25px;
        z-index: 90;
        padding: 20px;
        border-radius: 4px;
        width: 400px;
        background: #191A17 url('https://www.pathofexile.com/image/profile/profile-full.jpg?1563488658105') no-repeat top left;
        border: 1px solid;
      }
      .link {
        text-decoration: underline;
      }
      .openAnimation {
        -webkit-animation: moverTopBottom 500ms forwards;
        animation: moverTopBottom 500ms forwards;
      }
      .closeAnimation {
        -webkit-animation: moverBottomTop 500ms forwards;
        animation: moverBottomTop 500ms forwards;
      }
      @-webkit-keyframes moverTopBottom {
        0% { transform: translateY(-200px); }
        100% { transform: translateY(0px); }
      }
      @keyframes moverTopBottom {
        0% { transform: translateY(-200px); }
        100% { transform: translateY(0px); }
      }
      @-webkit-keyframes moverBottomTop {
        0% { transform: translateY(0px); }
        100% { transform: translateY(-200px); }
      }
      @keyframes moverBottomTop {
        0% { transform: translateY(0px); }
        100% { transform: translateY(-200px); }
      }
    </style>
{{ end }}
